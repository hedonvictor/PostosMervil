{
    "compilerOptions": {
      "lib": ["ES2023"],
      "module": "node16",
      "target": "ES2022",
      "outDir": "./build",
      "rootDir": "./src",
      "typeRoots": ["./node_modules/@types"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "exclude": [
      "./jest.config.ts",
      "./node_modules",
      "./tests",
      "./build"
    ]
  }